{
  "name": "ad-mirror-tests",
  "version": "1.0.0",
  "description": "Test suite for Ad Mirror detection engine",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/content/engine/**/*.ts",
      "!src/content/engine/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "jsdom": "^23.0.0",
    "ts-jest": "^29.1.1"
  }
}

